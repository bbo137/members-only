<div class="position-absolute start-50 translate-middle-x" style="margin-top: 90px; width: 400px">
  <div>
    <form method="POST">
      <div class="form-control">
        <h1 style="padding-left: auto" class="mb-2">Sign up!</h1>
        <div class="form-group">
          <div class="form-control mb-3">
            <label for="first_name" class="mb-1">First Name:</label>
            <input id="first_name" class="form-control mb-2" type="text" placeholder="First name (Christian)"
              name="first_name" required />

            <label for="family_name" class="mb-1">Family Name:</label>
            <input id="family_name" class="form-control mb-2" type="text" placeholder="Family name (Surname)"
              name="family_name" required />
          </div>
        </div>

        <div class="form-group">
          <div class="form-control mb-3">
            <label for="username" class="mb-1">Username:</label>
            <input id="username" class="form-control mb-2" placeholder="Username" type="text" name="username"
              required />

            <label for="password" class="mb-1">Password:</label>
            <input id="password" class="form-control mb-2" placeholder="password" type="password" name="password"
              required />

            <label for="password_confirm" class="mb-1">Confirm password:
            </label>
            <input id="password_confirm" class="form-control mb-2" placeholder="password" type="password"
              name="password_confirm" required />
          </div>
        </div>

        <input type="submit" class="btn btn-dark mb-2" value="Sign up" />
      </div>
    </form>
  </div>

  <% if (typeof errors !=='undefined' ) { %>
    <ul>
      <% errors.forEach(function(error) { %>
        <li>
          <%= error.msg %>
        </li>
        <% }); %>
    </ul>
    <% } %>
</div>